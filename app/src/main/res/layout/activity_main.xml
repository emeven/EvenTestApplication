<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/draggingDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="可拖拽半层" />

    <TextView
        android:id="@+id/bottom_sheet_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Bottom Sheet" />

    <TextView
        android:id="@+id/footerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Bottom Sheet"
        android:textSize="@dimen/xhs_theme_text_14" />

    <TextView
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xhs_theme_dimension_32"
        android:background="#0B000000"
        android:drawablePadding="@dimen/xhs_theme_dimension_4"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/xhs_theme_dimension_12"
        android:text="钻石森林香薰"
        app:drawableStart="@drawable/search" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Bottom Sheet"
            android:textColor="@color/xhsTheme_colorGrayLevel1"
            android:textSize="@dimen/xhs_theme_text_16" />

        <TextView
            android:id="@+id/price2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/priceText"
            android:layout_toEndOf="@id/priceText"
            android:text="Bottom Sheet"
            android:textColor="@color/xhsTheme_colorGrayLevel1"
            android:textSize="@dimen/xhs_theme_text_14"
            android:translationY="-2dp" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/draggingDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="可拖拽半层" />

    <TextView
        android:id="@+id/bottom_sheet_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Bottom Sheet" />

    <TextView
        android:id="@+id/footerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Bottom Sheet"
        android:textSize="@dimen/xhs_theme_text_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Sheet"
            android:textColor="@color/xhsTheme_colorGrayLevel1"
            android:textSize="@dimen/xhs_theme_text_16" />

        <TextView
            android:id="@+id/price2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/priceText"
            android:translationY="-2dp"
            android:layout_toEndOf="@id/priceText"
            android:text="Bottom Sheet"
            android:textColor="@color/xhsTheme_colorGrayLevel1"
            android:textSize="@dimen/xhs_theme_text_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/priceText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginEnd="100dp"
        android:background="@color/xhsTheme_colorGrayLevel6"
        android:gravity="center"
        android:text="Bottom Sheet"
        android:textColor="@color/xhsTheme_colorGrayLevel1"
        android:textSize="@dimen/xhs_theme_text_16" />

</LinearLayout>